[color]
  ui = auto

[push]
  default = simple

[fetch]
  prune = true

[core]
  editor = /usr/local/bin/vim
  pager = less -F -X

[alias]
  logtree = log --graph --all --decorate --oneline --abbrev-commit
  stat = status
  current-branch = rev-parse --abbrev-ref HEAD
  show-changed-files = show --name-only --pretty=""

[url "git@github.com:"]
  insteadOf = https://github.com/

# Use separate file for username, API token, etc
[include]
  path = ~/.gitcredentials

[hub]
  protocol = ssh

[commit]
	gpgsign = true
